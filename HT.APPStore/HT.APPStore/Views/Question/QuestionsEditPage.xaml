<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:HT.APPStore.Controls;assembly=HT.APPStore"
             x:Class="HT.APPStore.Views.Question.QuestionsEditPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="45" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Text="标题" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Style="{StaticResource SecondaryTextStyle}"/>
            <controls:XamEntry 
                x:Name="entryTitle"
                Grid.Row="0" 
                Grid.Column="1" 
                VerticalOptions="CenterAndExpand"
                Placeholder="简明的将问题描述清楚"
                Style="{StaticResource SecondaryTextStyle}"/>
            <controls:HeaderDivider  Grid.Row="1" Grid.Column="1"/>
            <Label Grid.Row="2" Grid.Column="0" Text="标签" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Style="{StaticResource SecondaryTextStyle}"/>
            <controls:XamEntry 
                x:Name="entryTags"
                Grid.Row="2" 
                Grid.Column="1" 
                VerticalOptions="CenterAndExpand"
                Placeholder="最多可以添加5个Tag"
                Style="{StaticResource SecondaryTextStyle}"/>
            <controls:HeaderDivider  Grid.Row="3" Grid.Column="1"/>
            <controls:XamEditor 
                x:Name="editorContent"
                Grid.Row="4" 
                Grid.ColumnSpan="2"
                VerticalOptions="FillAndExpand"
                Placeholder="详细描述您所遇到的问题"
                Style="{StaticResource SecondaryTextStyle}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>